<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/style_product"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="162dp"
        android:layout_height="197dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="162dp"
            android:layout_height="142dp">

            <ImageView
                android:id="@+id/img_productItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:alpha="5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_favorite"
                    android:layout_width="13dp"
                    android:layout_height="11dp"
                    android:src="@drawable/heart" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="54dp"
                android:layout_height="23dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:alpha="5"
                android:background="@drawable/evaluate_style"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/tv_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textColor="#D17842"
                    android:textSize="12dp" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/style_name_product"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nike"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_priceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12242"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>