<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        android:backgroundTint="#82b3be"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/khung_order"
            android:padding="8dp">
            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="#252525"
                android:fontFamily="@font/sen"
                android:text="Đơn hàng :"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/tvIdOder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/sen"
                android:gravity="center"
                android:layout_above="@id/tvTrangThai"
                android:text=""
                android:textColor="#252525"
                android:layout_toRightOf="@+id/id"
                android:layout_alignParentTop="true"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id"
                android:textColor="#252525"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="Trạng thái :"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id"
                android:textColor="#E8DC3B09"
                android:layout_toEndOf="@id/ngay"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ngay"
                android:textColor="#252525"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="Tổng :"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ngay"
                android:textColor="#252525"
                android:layout_toEndOf="@id/total"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"
                android:text="Thời gian :"
                android:textColor="#252525"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/total"
                android:layout_marginTop="8dp"
                android:textColor="#252525"
                android:layout_toEndOf="@id/status"
                android:layout_marginStart="8dp"
                android:textSize="17sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>