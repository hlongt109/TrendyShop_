<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:background="#fff"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#414042"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:backgroundTint="#414042"
            android:layout_centerVertical="true"
            android:id="@+id/cart1"
            app:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:id="@+id/img_product"
                android:src="@drawable/levi"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cart1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nike Swoosh"
                android:textColor="#D8DEF3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/tv_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,959,000â‚«"
                android:textColor="#D8DEF3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:id="@+id/item_menuProduct"
            android:layout_alignParentEnd="true"
            app:tint="#D8DEF3"
            android:src="@drawable/menu"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>