<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/img_anh"
            android:id="@+id/add_imgProductType"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="15dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name Product Type"
                android:textColorHint="@color/black"
                android:id="@+id/in_nameProductType">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_nameProductType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/khung_input"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Add Product Type"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#EC2578"
            android:id="@+id/btn_addProductType"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>